<h1>New item</h1>

<%= form_for @item do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :description %>
<%= f.text_area :description %>
<br>
<%= f.label :price %>
<%= f.number_field(:price, min: 0, step: 0.01) %>
<br>
<%= f.label :available %>
<%= f.check_box :available %>
<br>
<%= f.label :published %>
<%= f.check_box :published %>
<br>
<%= f.label :category_id %>
<%= f.select :category_id, Category.all.collect {|c| [ c.name, c.id ] }, {include_blank: true} %>
<br>
<%= f.submit 'Create' %>
<%= link_to("Cancel", items_path) %>
<% end %>