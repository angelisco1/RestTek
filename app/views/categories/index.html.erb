<h1>Categories</h1>

<table class="index-table">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>
<% @categories.each do |category| %>
  <tr>
    <td><%= category.id %></td>
    <td><%= category.name %></td>
    <td><%= link_to edit_category_path(category) do %><img src="./icons/edit.png"><% end %></td>
    <td><%= link_to category_path(category), confirm: 'Are you sure?', method: 'Delete' do %><img src="./icons/delete.png"><% end %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New category', new_category_path %>