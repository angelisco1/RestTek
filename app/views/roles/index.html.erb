<h1>Roles</h1>

<table class="index-table">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th></th>
    <th></th>    
  </tr>
<% @roles.each do |role| %>
  <tr>
    <td><%= role.id %></td>
    <td><%= role.name %></td>
    <td><%= link_to edit_role_path(role) do %><img src="./icons/edit.png"><% end %></td>
    <td><%= link_to role_path(role), confirm: 'Are you sure?', method: 'Delete' do %><img src="./icons/delete.png"><% end %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New role', new_role_path %>