<%= form_for @assignment do |f| %>
<%= f.label :role_id %>
<%= f.select :role_id, Role.all.collect {|r| [ r.name, r.id ] }, {include_blank: true} %>
<br>
<%= f.label :status_id %>
<%= f.select :status_id, Status.all.collect {|s| [ s.name, s.id ] }, {include_blank: true} %>
<br>
<%= f.submit 'Save' %>
<%= link_to("Cancel", assignments_path) %>
<% end %>